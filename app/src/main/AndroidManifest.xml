<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools">

    <uses-permission android:name="android.permission.INTERNET" />
    <uses-permission android:name="android.permission.POST_NOTIFICATIONS" />

    <application
        android:allowBackup="true"
        android:appComponentFactory="androidx.core.app.CoreComponentFactory"
        android:dataExtractionRules="@xml/data_extraction_rules"
        android:fullBackupContent="@xml/backup_rules"
        android:icon="@drawable/logo_black"
        android:label="@string/app_name"
        android:roundIcon="@drawable/logo_white"
        android:supportsRtl="true"
        android:theme="@style/Theme.DashboardSmartHome"
        tools:replace="android:appComponentFactory"
        tools:targetApi="31">
        <activity
            android:name=".TandonNotifActivity"
            android:exported="false" />
        <activity
            android:name=".ui.weatherForecast.WeatherForecastActivity"
            android:exported="false" />
        <activity
            android:name=".FireNotifActivity"
            android:exported="false" />
        <activity
            android:name=".EnergyMonitoringActivity"
            android:exported="false" />
        <activity
            android:name=".BottomNavFrameActivity"
            android:exported="false" />
        <activity
            android:name=".ui.splash.SplashActivity"
            android:exported="true"
            android:theme="@style/Theme.AVARA.Splash">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
    </application>

</manifest>