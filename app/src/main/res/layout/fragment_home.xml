<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/home_background"
    tools:context=".ui.home.HomeFragment">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:id="@+id/main_layout"
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <ScrollView
            android:id="@+id/scrollView"
            android:layout_width="match_parent"
            android:layout_height="0dp"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent">

            <androidx.constraintlayout.widget.ConstraintLayout
                android:id="@+id/scrollView_layout"
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:layout_margin="20dp">

                <LinearLayout
                    android:id="@+id/topNav"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:gravity="center_vertical"
                    android:layout_marginVertical="20dp"
                    app:layout_constraintTop_toTopOf="parent"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintEnd_toEndOf="parent">

                    <androidx.appcompat.widget.AppCompatImageView
                        android:id="@+id/home_icon"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        app:srcCompat="@drawable/homeicon" />

                    <TextView
                        android:id="@+id/home_text"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="My Home"
                        android:paddingStart="10dp"
                        android:textSize="24sp"
                        android:textStyle="bold"
                        android:textColor="@color/text_main_color" />

                </LinearLayout>

                <androidx.constraintlayout.widget.ConstraintLayout
                    android:id="@+id/container_weatherMonitor"
                    android:layout_width="match_parent"
                    android:layout_height="0dp"
                    android:layout_marginTop="30dp"
                    app:layout_constraintTop_toBottomOf="@id/topNav"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintEnd_toEndOf="parent">

                    <com.google.android.material.card.MaterialCardView
                        android:id="@+id/cardView_weather"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:backgroundTint="@color/cardPrimary"
                        app:strokeColor="@android:color/transparent"
                        app:layout_constraintTop_toTopOf="parent"
                        app:layout_constraintStart_toStartOf="parent"
                        app:layout_constraintEnd_toEndOf="parent">

                        <androidx.constraintlayout.widget.ConstraintLayout
                            android:id="@+id/mainWeather"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:padding="20dp">

                            <androidx.constraintlayout.widget.ConstraintLayout
                                android:id="@+id/firstWeather"
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                app:layout_constraintTop_toTopOf="parent"
                                app:layout_constraintStart_toStartOf="parent"
                                app:layout_constraintEnd_toEndOf="parent">

                                <androidx.appcompat.widget.AppCompatImageView
                                    android:id="@+id/mainWeatherIcon"
                                    android:layout_width="70dp"
                                    android:layout_height="70dp"
                                    app:srcCompat="@drawable/cloud_drizzle"
                                    app:layout_constraintTop_toTopOf="parent"
                                    app:layout_constraintStart_toStartOf="parent"/>

                                <TextView
                                    android:id="@+id/mainWeatherText"
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:text="18°C"
                                    android:textSize="34sp"
                                    android:textColor="@color/white"
                                    android:textStyle="bold"
                                    android:layout_marginStart="10dp"
                                    app:layout_constraintTop_toTopOf="parent"
                                    app:layout_constraintStart_toEndOf="@id/mainWeatherIcon"/>

                                <androidx.appcompat.widget.AppCompatImageView
                                    android:id="@+id/mainWeatherIconSub"
                                    android:layout_width="22dp"
                                    android:layout_height="22dp"
                                    app:srcCompat="@drawable/gps"
                                    android:layout_marginStart="10dp"
                                    app:layout_constraintTop_toBottomOf="@id/mainWeatherText"
                                    app:layout_constraintStart_toEndOf="@id/mainWeatherIcon"/>

                                <TextView
                                    android:id="@+id/mainWeatherTextSub"
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:text="Sleman, Yogyakarta"
                                    android:textSize="16sp"
                                    android:textColor="@color/white"
                                    android:layout_marginStart="10dp"
                                    app:layout_constraintTop_toBottomOf="@id/mainWeatherText"
                                    app:layout_constraintStart_toEndOf="@id/mainWeatherIconSub"/>

                            </androidx.constraintlayout.widget.ConstraintLayout>

                            <androidx.constraintlayout.widget.ConstraintLayout
                                android:id="@+id/secondWeather"
                                android:layout_width="0dp"
                                android:layout_height="wrap_content"
                                android:padding="10dp"
                                app:layout_constraintTop_toBottomOf="@id/firstWeather"
                                app:layout_constraintStart_toStartOf="parent"
                                app:layout_constraintEnd_toEndOf="parent">

                                <androidx.constraintlayout.widget.ConstraintLayout
                                    android:id="@+id/day1WeatherGroup"
                                    android:layout_width="0dp"
                                    android:layout_height="wrap_content">

                                    <androidx.appcompat.widget.AppCompatImageView
                                        android:id="@+id/day1WeatherIcon"
                                        android:layout_width="35dp"
                                        android:layout_height="35dp"
                                        app:srcCompat="@drawable/rain"
                                        app:layout_constraintTop_toTopOf="parent"
                                        app:layout_constraintStart_toStartOf="parent"
                                        app:layout_constraintEnd_toEndOf="parent" />

                                    <TextView
                                        android:id="@+id/day1TemperatureText"
                                        android:layout_width="wrap_content"
                                        android:layout_height="wrap_content"
                                        android:text="--°C"
                                        android:textSize="12sp"
                                        android:textColor="@android:color/white"
                                        android:gravity="center"
                                        app:layout_constraintTop_toBottomOf="@id/day1WeatherIcon"
                                        app:layout_constraintStart_toStartOf="@id/day1WeatherIcon"
                                        app:layout_constraintEnd_toEndOf="@id/day1WeatherIcon"
                                        app:layout_constraintBottom_toBottomOf="parent" />

                                </androidx.constraintlayout.widget.ConstraintLayout>

                                <androidx.constraintlayout.widget.ConstraintLayout
                                    android:id="@+id/day2WeatherGroup"
                                    android:layout_width="0dp"
                                    android:layout_height="wrap_content"
                                    app:layout_constraintTop_toTopOf="parent"
                                    app:layout_constraintStart_toEndOf="@id/day1WeatherGroup">

                                    <androidx.appcompat.widget.AppCompatImageView
                                        android:id="@+id/day2WeatherIcon"
                                        android:layout_width="35dp"
                                        android:layout_height="35dp"
                                        app:srcCompat="@drawable/rain"
                                        app:layout_constraintTop_toTopOf="parent"
                                        app:layout_constraintStart_toStartOf="parent"
                                        app:layout_constraintEnd_toEndOf="parent" />

                                    <TextView
                                        android:id="@+id/day2TemperatureText"
                                        android:layout_width="wrap_content"
                                        android:layout_height="wrap_content"
                                        android:text="--°C"
                                        android:textSize="12sp"
                                        android:textColor="@android:color/white"
                                        android:gravity="center"
                                        app:layout_constraintTop_toBottomOf="@id/day2WeatherIcon"
                                        app:layout_constraintStart_toStartOf="@id/day2WeatherIcon"
                                        app:layout_constraintEnd_toEndOf="@id/day2WeatherIcon"
                                        app:layout_constraintBottom_toBottomOf="parent" />

                                </androidx.constraintlayout.widget.ConstraintLayout>

                                <androidx.constraintlayout.widget.ConstraintLayout
                                    android:id="@+id/day3WeatherGroup"
                                    android:layout_width="0dp"
                                    android:layout_height="wrap_content"
                                    app:layout_constraintTop_toTopOf="parent"
                                    app:layout_constraintStart_toEndOf="@id/day2WeatherGroup">

                                    <androidx.appcompat.widget.AppCompatImageView
                                        android:id="@+id/day3WeatherIcon"
                                        android:layout_width="35dp"
                                        android:layout_height="35dp"
                                        app:srcCompat="@drawable/rain"
                                        app:layout_constraintTop_toTopOf="parent"
                                        app:layout_constraintStart_toStartOf="parent"
                                        app:layout_constraintEnd_toEndOf="parent" />

                                    <TextView
                                        android:id="@+id/day3TemperatureText"
                                        android:layout_width="wrap_content"
                                        android:layout_height="wrap_content"
                                        android:text="--°C"
                                        android:textSize="12sp"
                                        android:textColor="@android:color/white"
                                        android:gravity="center"
                                        app:layout_constraintTop_toBottomOf="@id/day3WeatherIcon"
                                        app:layout_constraintStart_toStartOf="@id/day3WeatherIcon"
                                        app:layout_constraintEnd_toEndOf="@id/day3WeatherIcon"
                                        app:layout_constraintBottom_toBottomOf="parent" />

                                </androidx.constraintlayout.widget.ConstraintLayout>

                                <androidx.constraintlayout.widget.ConstraintLayout
                                    android:id="@+id/day4WeatherGroup"
                                    android:layout_width="0dp"
                                    android:layout_height="wrap_content"
                                    app:layout_constraintTop_toTopOf="parent"
                                    app:layout_constraintStart_toEndOf="@id/day3WeatherGroup">

                                    <androidx.appcompat.widget.AppCompatImageView
                                        android:id="@+id/day4WeatherIcon"
                                        android:layout_width="35dp"
                                        android:layout_height="35dp"
                                        app:srcCompat="@drawable/rain"
                                        app:layout_constraintTop_toTopOf="parent"
                                        app:layout_constraintStart_toStartOf="parent"
                                        app:layout_constraintEnd_toEndOf="parent" />

                                    <TextView
                                        android:id="@+id/day4TemperatureText"
                                        android:layout_width="wrap_content"
                                        android:layout_height="wrap_content"
                                        android:text="--°C"
                                        android:textSize="12sp"
                                        android:textColor="@android:color/white"
                                        android:gravity="center"
                                        app:layout_constraintTop_toBottomOf="@id/day4WeatherIcon"
                                        app:layout_constraintStart_toStartOf="@id/day4WeatherIcon"
                                        app:layout_constraintEnd_toEndOf="@id/day4WeatherIcon"
                                        app:layout_constraintBottom_toBottomOf="parent" />

                                </androidx.constraintlayout.widget.ConstraintLayout>

                                <androidx.constraintlayout.widget.ConstraintLayout
                                    android:id="@+id/day5WeatherGroup"
                                    android:layout_width="0dp"
                                    android:layout_height="wrap_content"
                                    app:layout_constraintTop_toTopOf="parent"
                                    app:layout_constraintStart_toEndOf="@id/day4WeatherGroup">

                                    <androidx.appcompat.widget.AppCompatImageView
                                        android:id="@+id/day5WeatherIcon"
                                        android:layout_width="35dp"
                                        android:layout_height="35dp"
                                        app:srcCompat="@drawable/rain"
                                        app:layout_constraintTop_toTopOf="parent"
                                        app:layout_constraintStart_toStartOf="parent"
                                        app:layout_constraintEnd_toEndOf="parent" />

                                    <TextView
                                        android:id="@+id/day5TemperatureText"
                                        android:layout_width="wrap_content"
                                        android:layout_height="wrap_content"
                                        android:text="--°C"
                                        android:textSize="12sp"
                                        android:textColor="@android:color/white"
                                        android:gravity="center"
                                        app:layout_constraintTop_toBottomOf="@id/day5WeatherIcon"
                                        app:layout_constraintStart_toStartOf="@id/day5WeatherIcon"
                                        app:layout_constraintEnd_toEndOf="@id/day5WeatherIcon"
                                        app:layout_constraintBottom_toBottomOf="parent" />

                                </androidx.constraintlayout.widget.ConstraintLayout>

                                <androidx.constraintlayout.widget.ConstraintLayout
                                    android:id="@+id/day6WeatherGroup"
                                    android:layout_width="0dp"
                                    android:layout_height="wrap_content"
                                    app:layout_constraintTop_toTopOf="parent"
                                    app:layout_constraintStart_toEndOf="@id/day5WeatherGroup">

                                    <androidx.appcompat.widget.AppCompatImageView
                                        android:id="@+id/day6WeatherIcon"
                                        android:layout_width="35dp"
                                        android:layout_height="35dp"
                                        app:srcCompat="@drawable/rain"
                                        app:layout_constraintTop_toTopOf="parent"
                                        app:layout_constraintStart_toStartOf="parent"
                                        app:layout_constraintEnd_toEndOf="parent" />

                                    <TextView
                                        android:id="@+id/day6TemperatureText"
                                        android:layout_width="wrap_content"
                                        android:layout_height="wrap_content"
                                        android:text="--°C"
                                        android:textSize="12sp"
                                        android:textColor="@android:color/white"
                                        android:gravity="center"
                                        app:layout_constraintTop_toBottomOf="@id/day6WeatherIcon"
                                        app:layout_constraintStart_toStartOf="@id/day6WeatherIcon"
                                        app:layout_constraintEnd_toEndOf="@id/day6WeatherIcon"
                                        app:layout_constraintBottom_toBottomOf="parent" />

                                </androidx.constraintlayout.widget.ConstraintLayout>

                                <androidx.constraintlayout.widget.ConstraintLayout
                                    android:id="@+id/day7WeatherGroup"
                                    android:layout_width="0dp"
                                    android:layout_height="wrap_content"
                                    app:layout_constraintBottom_toTopOf="parent"
                                    app:layout_constraintStart_toEndOf="@id/day6WeatherGroup">

                                    <androidx.appcompat.widget.AppCompatImageView
                                        android:id="@+id/day7WeatherIcon"
                                        android:layout_width="35dp"
                                        android:layout_height="35dp"
                                        app:srcCompat="@drawable/rain"
                                        app:layout_constraintTop_toTopOf="parent"
                                        app:layout_constraintStart_toStartOf="parent"
                                        app:layout_constraintEnd_toEndOf="parent" />

                                    <TextView
                                        android:id="@+id/day7TemperatureText"
                                        android:layout_width="wrap_content"
                                        android:layout_height="wrap_content"
                                        android:text="--°C"
                                        android:textSize="12sp"
                                        android:textColor="@android:color/white"
                                        android:gravity="center"
                                        app:layout_constraintTop_toBottomOf="@id/day7WeatherIcon"
                                        app:layout_constraintStart_toStartOf="@id/day7WeatherIcon"
                                        app:layout_constraintEnd_toEndOf="@id/day7WeatherIcon"
                                        app:layout_constraintBottom_toBottomOf="parent" />

                                </androidx.constraintlayout.widget.ConstraintLayout>


                                <androidx.constraintlayout.helper.widget.Flow
                                    android:layout_width="0dp"
                                    android:layout_height="wrap_content"
                                    app:layout_constraintTop_toTopOf="parent"
                                    app:layout_constraintStart_toStartOf="parent"
                                    app:layout_constraintEnd_toEndOf="parent"
                                    app:layout_constraintBottom_toBottomOf="parent"
                                    app:constraint_referenced_ids="day1WeatherGroup,
                                     day2WeatherGroup,
                                     day3WeatherGroup,
                                     day4WeatherGroup,
                                     day5WeatherGroup,
                                     day6WeatherGroup,
                                     day7WeatherGroup"
                                    app:flow_wrapMode="chain"
                                    app:flow_maxElementsWrap="7"
                                    app:flow_horizontalStyle="spread_inside"
                                    app:flow_horizontalGap="8dp"
                                    app:flow_verticalGap="8dp"
                                    app:flow_verticalAlign="center"
                                    app:flow_firstHorizontalBias="0.5" />

                            </androidx.constraintlayout.widget.ConstraintLayout>

                        </androidx.constraintlayout.widget.ConstraintLayout>

                    </com.google.android.material.card.MaterialCardView>

                </androidx.constraintlayout.widget.ConstraintLayout>

                <androidx.constraintlayout.widget.ConstraintLayout
                    android:id="@+id/container_energyCost"
                    android:layout_width="match_parent"
                    android:layout_height="0dp"
                    android:layout_marginTop="20dp"
                    app:layout_constraintTop_toBottomOf="@id/container_weatherMonitor"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintEnd_toEndOf="parent">

                    <com.google.android.material.card.MaterialCardView
                        android:id="@+id/cardView_energyCost"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:backgroundTint="@color/cardPrimary"
                        app:strokeColor="@android:color/transparent"
                        app:layout_constraintTop_toTopOf="parent"
                        app:layout_constraintStart_toStartOf="parent"
                        app:layout_constraintEnd_toEndOf="parent">

                        <androidx.constraintlayout.widget.ConstraintLayout
                            android:id="@+id/layout_textView_energyCost"
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:padding="20dp">

                            <TextView
                                android:id="@+id/title_energyCost"
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:text="Energy usage"
                                android:textStyle="bold"
                                android:textSize="16sp"
                                android:textColor="@color/text_main_color"
                                app:layout_constraintTop_toTopOf="parent"
                                app:layout_constraintStart_toStartOf="parent"
                                app:layout_constraintEnd_toEndOf="parent"
                                app:layout_constraintBottom_toTopOf="@id/text_energyCost"/>

                            <TextView
                                android:id="@+id/text_energyCost"
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:text="120 Kwh"
                                android:textStyle="bold"
                                android:textSize="24sp"
                                android:textColor="@color/text_main_color"
                                app:layout_constraintTop_toBottomOf="@id/title_energyCost"
                                app:layout_constraintStart_toStartOf="parent"
                                app:layout_constraintEnd_toEndOf="parent"
                                app:layout_constraintBottom_toBottomOf="parent"/>

                        </androidx.constraintlayout.widget.ConstraintLayout>

                    </com.google.android.material.card.MaterialCardView>

                    <androidx.constraintlayout.widget.ConstraintLayout
                        android:id="@+id/container_energyUsage"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="20dp"
                        app:layout_constraintTop_toBottomOf="@id/cardView_energyCost"
                        app:layout_constraintStart_toStartOf="parent"
                        app:layout_constraintEnd_toEndOf="parent">

                        <com.google.android.material.card.MaterialCardView
                            android:id="@+id/cardView_totalEnergyUsage"
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:backgroundTint="@color/cardPrimary"
                            app:strokeColor="@android:color/transparent"
                            android:layout_marginEnd="10dp"
                            app:layout_constraintTop_toTopOf="parent"
                            app:layout_constraintStart_toStartOf="parent"
                            app:layout_constraintEnd_toStartOf="@id/cardView_deviceEnergyUsage"
                            app:layout_constraintBottom_toBottomOf="parent">

                            <androidx.constraintlayout.widget.ConstraintLayout
                                android:id="@+id/layout_totalEnergyUsage"
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:paddingVertical="20dp">

                                <TextView
                                    android:id="@+id/title_totalEnergyUsage"
                                    android:layout_width="match_parent"
                                    android:layout_height="wrap_content"
                                    android:text="Power Usage"
                                    android:textStyle="bold"
                                    android:textSize="16sp"
                                    android:textColor="@color/text_main_color"
                                    android:gravity="center"
                                    app:layout_constraintTop_toTopOf="parent"
                                    app:layout_constraintStart_toStartOf="parent"
                                    app:layout_constraintEnd_toEndOf="parent"/>

                                <TextView
                                    android:id="@+id/value_totalEnergyUsage"
                                    android:layout_width="match_parent"
                                    android:layout_height="wrap_content"
                                    android:text="50"
                                    android:textStyle="bold"
                                    android:textSize="24sp"
                                    android:textColor="@color/text_main_color"
                                    android:gravity="center"
                                    android:paddingTop="10dp"
                                    app:layout_constraintTop_toBottomOf="@id/title_totalEnergyUsage"
                                    app:layout_constraintStart_toStartOf="parent"
                                    app:layout_constraintEnd_toEndOf="parent"/>

                            </androidx.constraintlayout.widget.ConstraintLayout>

                        </com.google.android.material.card.MaterialCardView>

                        <com.google.android.material.card.MaterialCardView
                            android:id="@+id/cardView_deviceEnergyUsage"
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:backgroundTint="@color/cardPrimary"
                            app:strokeColor="@android:color/transparent"
                            app:layout_constraintTop_toTopOf="parent"
                            app:layout_constraintStart_toEndOf="@id/cardView_totalEnergyUsage"
                            app:layout_constraintEnd_toEndOf="parent"
                            app:layout_constraintBottom_toBottomOf="parent">

                            <androidx.constraintlayout.widget.ConstraintLayout
                                android:id="@+id/layout_deviceEnergyUsage"
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:paddingVertical="20dp">

                                <TextView
                                    android:id="@+id/title_deviceEnergyUsage"
                                    android:layout_width="match_parent"
                                    android:layout_height="wrap_content"
                                    android:text="Voltage Usage"
                                    android:textStyle="bold"
                                    android:textSize="16sp"
                                    android:textColor="@color/text_main_color"
                                    android:gravity="center"
                                    app:layout_constraintTop_toTopOf="parent"
                                    app:layout_constraintStart_toStartOf="parent"
                                    app:layout_constraintEnd_toEndOf="parent"/>

                                <TextView
                                    android:id="@+id/value_deviceEnergyUsage"
                                    android:layout_width="match_parent"
                                    android:layout_height="wrap_content"
                                    android:text="240"
                                    android:textStyle="bold"
                                    android:textSize="24sp"
                                    android:textColor="@color/text_main_color"
                                    android:gravity="center"
                                    android:layout_marginTop="10dp"
                                    app:layout_constraintTop_toBottomOf="@id/title_deviceEnergyUsage"
                                    app:layout_constraintStart_toStartOf="parent"
                                    app:layout_constraintEnd_toEndOf="parent"/>

                            </androidx.constraintlayout.widget.ConstraintLayout>

                        </com.google.android.material.card.MaterialCardView>

                    </androidx.constraintlayout.widget.ConstraintLayout>

                </androidx.constraintlayout.widget.ConstraintLayout>

                <androidx.constraintlayout.widget.ConstraintLayout
                    android:id="@+id/container_routines"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="20dp"
                    app:layout_constraintTop_toBottomOf="@id/container_energyCost">

                    <TextView
                        android:id="@+id/title_routines"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="Routines"
                        android:textColor="@color/text_main_color"
                        android:textStyle="bold"
                        android:textSize="24sp"
                        app:layout_constraintTop_toTopOf="parent"
                        app:layout_constraintStart_toStartOf="parent"
                        app:layout_constraintEnd_toEndOf="parent"/>

                    <androidx.constraintlayout.widget.ConstraintLayout
                        android:id="@+id/layout_routines"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="10dp"
                        app:layout_constraintTop_toBottomOf="@id/title_routines"
                        app:layout_constraintStart_toStartOf="parent"
                        app:layout_constraintEnd_toEndOf="parent">

                        <com.google.android.material.card.MaterialCardView
                            android:id="@+id/cardView_home_btn"
                            android:layout_width="110dp"
                            android:layout_height="wrap_content"
                            app:strokeColor="@android:color/transparent">

                            <androidx.constraintlayout.widget.ConstraintLayout
                                android:layout_width="match_parent"
                                android:layout_height="match_parent"
                                android:padding="10dp">

                                <androidx.appcompat.widget.AppCompatImageView
                                    android:id="@+id/icon_home_btn"
                                    android:layout_width="30dp"
                                    android:layout_height="30dp"
                                    app:srcCompat="@drawable/lamp"
                                    android:layout_marginBottom="10dp"
                                    app:layout_constraintTop_toTopOf="parent"
                                    app:layout_constraintStart_toStartOf="parent"
                                    app:layout_constraintBottom_toTopOf="@id/title_home_btn"/>

                                <TextView
                                    android:id="@+id/title_home_btn"
                                    android:layout_width="match_parent"
                                    android:layout_height="wrap_content"
                                    android:text="1st Floor"
                                    android:textColor="@color/text_main_color"
                                    android:textStyle="bold"
                                    android:textSize="16sp"
                                    app:layout_constraintTop_toBottomOf="@id/icon_home_btn"
                                    app:layout_constraintStart_toStartOf="parent"
                                    app:layout_constraintEnd_toEndOf="parent"
                                    app:layout_constraintBottom_toTopOf="@id/text_home_btn"/>

                                <TextView
                                    android:id="@+id/text_home_btn"
                                    android:layout_width="match_parent"
                                    android:layout_height="wrap_content"
                                    android:text="View Details and Use"
                                    android:textColor="@color/text_main_color"
                                    android:textSize="11sp"
                                    app:layout_constraintTop_toBottomOf="@id/title_home_btn"
                                    app:layout_constraintStart_toStartOf="parent"
                                    app:layout_constraintEnd_toEndOf="parent"/>

                            </androidx.constraintlayout.widget.ConstraintLayout>

                        </com.google.android.material.card.MaterialCardView>

                        <com.google.android.material.card.MaterialCardView
                            android:id="@+id/cardView_nightMode_btn"
                            android:layout_width="110dp"
