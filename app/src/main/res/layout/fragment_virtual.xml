<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/virtual_background"
    tools:context=".ui.virtual.VirtualFragment">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_margin="10dp">

        <LinearLayout
            android:id="@+id/topNav"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:gravity="center_vertical"
            android:layout_marginVertical="20dp"
            android:layout_marginHorizontal="10dp"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent">

            <androidx.appcompat.widget.AppCompatImageView
                android:id="@+id/home_icon"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                app:srcCompat="@drawable/homeicon" />

            <TextView
                android:id="@+id/home_text"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Safety Control"
                android:paddingStart="10dp"
                android:textSize="20sp"
                android:textStyle="bold"
                android:textColor="@color/text_main_color" />

        </LinearLayout>

        <com.google.android.material.card.MaterialCardView
            android:id="@+id/cardView_energyCost"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:backgroundTint="@color/cardPrimary"
            app:strokeColor="@android:color/transparent"
            app:layout_constraintTop_toBottomOf="@id/topNav"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            android:layout_marginTop="30dp">

            <androidx.constraintlayout.widget.ConstraintLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:padding="16dp">

                <TextView
                    android:id="@+id/timeText"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="13:20 PM"
                    android:textSize="20sp"
                    android:textColor="@android:color/white"
                    android:textStyle="bold"
                    app:layout_constraintTop_toTopOf="parent"
                    app:layout_constraintStart_toStartOf="parent"/>

                <TextView
                    android:id="@+id/dateText"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Thursday, 22 May 2025"
                    android:textSize="14sp"
                    android:textColor="@android:color/white"
                    app:layout_constraintTop_toBottomOf="@id/timeText"
                    app:layout_constraintStart_toStartOf="parent"
                    android:layout_marginTop="4dp"/>

                <androidx.constraintlayout.helper.widget.Flow
                    android:id="@+id/buttonFlow"
                    android:layout_width="0dp" android:layout_height="wrap_content"
                    app:constraint_referenced_ids="btn1,btn2,btn3,btn4"
                    app:flow_wrapMode="aligned"
                    app:flow_horizontalGap="8dp"
                    app:flow_verticalGap="8dp"
                    app:flow_maxElementsWrap="2"
                    app:layout_constraintTop_toBottomOf="@id/dateText"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintEnd_toStartOf="@id/securityLogContainer" android:layout_marginTop="16dp"
                    android:layout_marginEnd="16dp" />

                <com.google.android.material.card.MaterialCardView
                    android:id="@+id/btn1"
                    android:layout_width="80dp"
                    android:layout_height="50dp"
                    app:cardCornerRadius="8dp"
                    app:strokeColor="@android:color/transparent"
                    android:backgroundTint="@color/cardThird">

                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:gravity="center"
                        android:text="Lorem"
                        android:textColor="@android:color/white"/>

                </com.google.android.material.card.MaterialCardView>

                <com.google.android.material.card.MaterialCardView
                    android:id="@+id/btn2"
                    android:layout_width="80dp"
                    android:layout_height="50dp"
                    app:cardCornerRadius="8dp"
                    app:strokeColor="@android:color/transparent"
                    android:backgroundTint="@color/cardThird">

                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:gravity="center"
                        android:text="Lorem"
                        android:textColor="@android:color/white"/>

                </com.google.android.material.card.MaterialCardView>

                <com.google.android.material.card.MaterialCardView
                    android:id="@+id/btn3"
                    android:layout_width="80dp"
                    android:layout_height="50dp"
                    app:cardCornerRadius="8dp"
                    app:strokeColor="@android:color/transparent"
                    android:backgroundTint="@color/cardThird">

                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:gravity="center"
                        android:text="Lorem"
                        android:textColor="@android:color/white"/>

                </com.google.android.material.card.MaterialCardView>

                <com.google.android.material.card.MaterialCardView
                    android:id="@+id/btn4"
                    android:layout_width="80dp"
                    android:layout_height="50dp"
                    app:cardCornerRadius="8dp"
                    app:strokeColor="@android:color/transparent"
                    android:backgroundTint="@color/cardThird">

                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:gravity="center"
                        android:text="Lorem"
                        android:textColor="@android:color/white"/>

                </com.google.android.material.card.MaterialCardView>

                <androidx.constraintlayout.widget.ConstraintLayout
                    android:id="@+id/securityLogContainer"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    app:layout_constraintTop_toTopOf="parent"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintStart_toEndOf="@id/buttonFlow"
                    app:layout_constraintBottom_toBottomOf="parent" >

                    <TextView
                        android:id="@+id/securityLabel"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Security Log"
                        android:textColor="@android:color/white"
                        android:textStyle="bold"
                        app:layout_constraintTop_toTopOf="parent"
                        app:layout_constraintEnd_toEndOf="parent"
                        app:layout_constraintStart_toStartOf="parent"/>

                    <com.google.android.material.card.MaterialCardView
                        android:id="@+id/log1"
                        android:layout_width="0dp"
                        android:layout_height="40dp"
                        android:layout_marginTop="8dp"
                        app:cardCornerRadius="8dp"
                        app:strokeColor="@android:color/transparent"
                        android:backgroundTint="@color/cardThird"
                        app:layout_constraintTop_toBottomOf="@id/securityLabel"
                        app:layout_constraintStart_toStartOf="parent"
                        app:layout_constraintEnd_toEndOf="parent" >

                        <TextView
                            android:id="@+id/log_text_1"
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:gravity="center_vertical"
                            android:paddingStart="8dp"
                            android:text="Log Entry 1"
                            android:textColor="@color/white"/>

                     </com.google.android.material.card.MaterialCardView>

                    <com.google.android.material.card.MaterialCardView
                        android:id="@+id/log2"
                        android:layout_width="0dp"
                        android:layout_height="40dp"
                        android:layout_marginTop="8dp"
                        app:cardCornerRadius="8dp"
                        app:strokeColor="@android:color/transparent"
                        android:backgroundTint="@color/cardThird"
                        app:layout_constraintTop_toBottomOf="@id/log1"
                        app:layout_constraintStart_toStartOf="parent"
                        app:layout_constraintEnd_toEndOf="parent" >

                        <TextView
                            android:id="@+id/log_text_2"
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:gravity="center_vertical"
                            android:paddingStart="8dp"
                            android:text="Log Entry 2"
                            android:textColor="@color/white"/>

                    </com.google.android.material.card.MaterialCardView>

                    <com.google.android.material.card.MaterialCardView
                        android:id="@+id/log3"
                        android:layout_width="0dp"
                        android:layout_height="40dp"
                        android:layout_marginTop="8dp"
                        app:cardCornerRadius="8dp"
                        app:strokeColor="@android:color/transparent"
                        android:backgroundTint="@color/cardThird"
                        app:layout_constraintTop_toBottomOf="@id/log2"
                        app:layout_constraintStart_toStartOf="parent"
                        app:layout_constraintEnd_toEndOf="parent" >

                        <TextView
                            android:id="@+id/log_text_3"
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:gravity="center_vertical"
                            android:paddingStart="8dp"
                            android:text="Log Entry 3"
                            android:textColor="@color/white"/>

                    </com.google.android.material.card.MaterialCardView>

                    <com.google.android.material.card.MaterialCardView
                        android:id="@+id/log4"
                        android:layout_width="0dp"
                        android:layout_height="40dp"
                        android:layout_marginTop="8dp"
                        app:cardCornerRadius="8dp"
                        app:strokeColor="@android:color/transparent"
                        android:backgroundTint="@color/cardThird"
                        app:layout_constraintTop_toBottomOf="@id/log3"
                        app:layout_constraintStart_toStartOf="parent"
                        app:layout_constraintEnd_toEndOf="parent" >

                        <TextView
                            android:id="@+id/log_text_4"
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:gravity="center_vertical"
                            android:paddingStart="8dp"
                            android:text="Log Entry 4"
                            android:textColor="@color/white"/>

                    </com.google.android.material.card.MaterialCardView>

                </androidx.constraintlayout.widget.ConstraintLayout>

            </androidx.constraintlayout.widget.ConstraintLayout>

        </com.google.android.material.card.MaterialCardView>

    </androidx.constraintlayout.widget.ConstraintLayout>

</ScrollView>